[global_config]
  focus = system
  handle_size = 8
[keybindings]
  zoom_in = <Primary>KP_Add
  zoom_normal = <Primary>KP_0
  zoom_out = <Primary>KP_Subtract
[plugins]
[profiles]
  [[default]]
    background_color = "{{ terminal.background.color }}"
    background_darkness = {{ terminal.background.transparency / 100 | round(2, 'floor') }}
    background_type = transparent
    cursor_color = "{{ terminal.cursor.color }}"
    cursor_color_fg = False
    custom_command = /usr/bin/zsh
    font = {{ terminal.font }}
    palette = "{{ terminal.palette|join(':') }}"
    scrollback_infinite = True
    scrollback_lines = {{ terminal.scrollback }}
    use_custom_command = True
    use_system_font = False
